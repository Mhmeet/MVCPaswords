    <script type="text/javascript">
        $(document).ready(function () {
            var id = 0;
            var kateid = 0;
            $("#kullaniciselect").change(function () {
                id = $(this).children(":selected").attr("value");
                if (id > 0) {
                    $('#kullanicidensifre').removeClass('d-none');
                    $('#kategoridenid').removeClass('d-none');
                    $('#kullanicidenaciklama').removeClass('d-none');
                    $('#kaydetbutton').removeClass('d-none');
                }
                else {
                    $('#kullanicidensifre').addClass('d-none');
                    $('#kaydetbutton').addClass('d-none');
                    $('#kategoridenid').addClass('d-none');
                    $('#kullanicidenaciklama').addClass('d-none');
                }
            });
            $("#select").change(function () {
                kateid = $(this).children(":selected").attr("value");
            });
            $("#kayitOl").click(function () {
                var sifre = $("#sifre").val();
                var aciklama = $("#aciklama").val();
                if (kateid != 0) {
                $.ajax({
                url: '@Url.Action("KullaniciSifreEkle", "Admin")',
                    type: 'POST',
                    datatype: 'json',
                    data: {id:id, sifre: sifre, ack: aciklama, katid: kateid },
                    success: function (data) {
                        if (data == true) {
                            Swal.fire({
                            title: 'Kayıt Tamamlandı',
                                text: "Hesabınız Aktif olduğunda Mail Gönderilecektir. Lütfen Bekleyin!",
                                icon: 'success',
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: 'Tamam!'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location.href = "/Admin/Index";
                                    }
                                })
                        }
                        else {
                            Swal.fire(
                                "hata",
                                "hatalı işlem",
                                "Error"
                                )
                        }
                    },
                    error: function (data) {
                        //if (data == 3) {
                        //    swal.fire(
                        //        'Kayıt başarısız!',
                        //        'Lütfen mail adresinizi \64 Oksitem.com olarak doldurun!',
                        //        'Error'
                        //    )
                        //}
                        //if (data == 4) {
                        //    swal.fire(
                        //        'Kayıt başarısız!',
                        //        'Bu isimde başka bir mail adresi bulunmaktadır!',
                        //        'Error'
                        //    )
                        //}
                        if (data == false) {
                            swal.fire(
                                'Kayıt başarısız!',
                                'İşleminiz gerçekleşirken bi aksilik oluştu!',
                                'Error'
                            )
                        }
                    }
                });
                }
            });
        });
    </script>
