<div class="limiter">
    <div class="container-login100" style="background-image: url('../../Content/Login_v16/images/bg-01.jpg');">
        <div class="wrap-login100 p-t-30 p-b-50">
            <span class="login100-form-title p-b-41">
                oKSitem Yeni Şifre Oluşturma
            </span>


            <div class="wrap-input100 validate-input" data-validate="Şifrenizi giriniz">
                <input class="input100" type="password" id="sifre" name="Sifre" placeholder="Şİfre">
                <span class="focus-input100" data-placeholder="&#xe80f;"></span>
            </div>
            <div class="wrap-input100 validate-input" data-validate="Şifrenizi tekrar giriniz">
                <input class="input100" type="password" id="sifretekrar" name="SifreTekrar" placeholder="Şİfre">
                <span class="focus-input100" data-placeholder="&#xe80f;"></span>
            </div>
            <div class="container-login100-form-btn m-t-32">

                <button type="button" id="onay" value="Kayıt Ol" class="login100-form-btn">
                    Onayla
                </button>
            </div>
            }

        </div>
    </div>
</div>
<script src="~/Content/Login_v16/vendor/jquery/jquery-3.2.1.min.js"></script>
<script src="~/Content/Login_v16/vendor/animsition/js/animsition.min.js"></script>
<script src="~/Content/Login_v16/vendor/bootstrap/js/popper.js"></script>
<script src="~/Content/Login_v16/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/Content/Login_v16/vendor/select2/select2.min.js"></script>
<script src="~/Content/Login_v16/vendor/daterangepicker/moment.min.js"></script>
<script src="~/Content/Login_v16/vendor/daterangepicker/daterangepicker.js"></script>
<script src="~/Content/Login_v16/vendor/countdowntime/countdowntime.js"></script>
<script src="~/Content/Login_v16/js/main.js"></script>
<script>
    $(document).ready(function () {
        $("#onay").click(function () {
            var sifre = $("#sifre").val();
            var sifretek = $("#sifretekrar").val();
            if (sifre == sifretek && sifre != "" && sifretek != "") {
                               $.ajax({
                                   url: '@Url.Action("YeniSifre", "Login")',
                                   type: 'POST',
                                   datatype: 'json',
                                   data: { sifre: sifre },
                                   success: function (data) {
                                       if (data == true) {
                                           alert("Kategori Talebi Oluşturulmuştur");
                                       }
                                   },
                                   error: function (data) {
                                       if (data == false) {
                                           alert("Şifre Yenilenemedi");
                                       }
                                   },
                               });
            }
            else if (sifre == "") {
                alert("Şifreler uyuşmuyor");

            }
            else if (sifre != sifretek) {
                alert("Birbirleriyle Aynı Değil");
            }
            else {
                alert("aaaaa");
            }
        })
    })
</script>